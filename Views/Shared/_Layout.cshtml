<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Financial Dashboard</title>
    <link rel="icon" href="~/img/favicon2.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/assets/css/soft-design-system-pro.css">
    <script src="~/js/fullcalendar-scheduler/dist/index.global.min.js"></script>
    <link rel="stylesheet" href="~/Admin/css/admin.css" asp-append-version="true">
    <link rel="stylesheet" href="~/Identity/css/identity.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Dash.styles.css" asp-append-version="true"/>
</head>
<body class="bg-gradient-dark">
<div class="container">
    <nav
            class="navbar navbar-expand-lg bg-gradient-dark navbar-dark  blur blur-rounded top-0  z-index-3 shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
        <div class="container px-0">
            @if (ViewBag.user != null)
            {
                <a class="navbar-brand ubuntu-bold ms-sm-3 text-white " asp-action="Index" asp-controller="Dashboard" asp-area="Admin" rel="tooltip"
                   title="Created By Kevin Stradtman" data-placement="bottom">
                    Financial Dashboard - <span class="text-gradient text-success">@ViewBag.user.UserName</span> <img src="~/img/logo-2.png" height="50" width="50" alt="Site Logo"/>
                </a>
            }
            else
            {
                <a class="navbar-brand ubuntu-bold ms-sm-3 text-white" asp-action="Index" asp-controller="Home" rel="tooltip"
                   title="Created By Kevin Stradtman" data-placement="bottom">
                     Financial Dashboard <img src="~/img/logo-2.png" height="50" width="50" alt="Site Logo"/>
                </a>    
            }
            
            <button class="navbar-toggler shadow-none ms-md-2" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                <span class="navbar-toggler-icon"></span>
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="nav">
                <div class="collapse navbar-collapse" id="navigation">
                    <div class="d-flex justify-content-start gap-2">

                        <div class="dropdown m-3">
                            <a class="btn bg-gradient-warning dropdown-toggle ubuntu-bold text-white" id="dropdownAccountA"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Account
                            </a>
                            <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownAccountA">
                                @if (ViewBag.user == null)
                                {
                                    <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Register" asp-controller="Identity" asp-area="Identity">Register</a></li>
                                    <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Login" asp-controller="Identity" asp-area="Identity">Login</a></li>
                                }
                                else
                                {
                                    <form asp-controller="Identity" asp-action="Logout" asp-area="Identity" method="post">
                                        <button class="dropdown-item ubuntu-bold text-gradient text-warning" type="submit">Logout</button>
                                    </form>
                                }
                            </ul>
                        </div>
                        @if (ViewBag.user != null)
                        {
                            <li class="nav-item dropdown dropdown-hover mx-2 z-index-3">
                  <a role="button" class="nav-link text-gradient text-info ubuntu-bold mt-3 ps-2 d-flex justify-content-between cursor-pointer align-items-center menu-link" id="dropdownMenuPages" data-bs-toggle="dropdown" aria-expanded="false">
                    Menu
                    <img src="~/assets/img/down-arrow-dark.svg" alt="down-arrow" class="arrow ms-1">
                  </a>
                  <div class="dropdown-menu bg-gradient-dark dropdown-menu-animation dropdown-xl p-3 border-radius-xl mt-0 mt-lg-3" aria-labelledby="dropdownMenuPages">
                    <div class="row d-none d-lg-block">
                      <div class="col-12 px-4 py-2">
                        <div class="row">
                          <div class="col-4 position-relative">
                            <div class="dropdown-header text-white ubuntu-bold font-weight-bolder d-flex align-items-center px-0 mt-3">
                              <div class="d-inline-block">
                                <div class="icon icon-shape icon-xs border-radius-md bg-gradient-info text-center me-2 d-flex align-items-center justify-content-center ps-0">
                                  <i class="fa-solid fa-gauge fa-menu-style"></i>
                                </div>
                              </div>
                              Dashboard
                            </div>
                            <div class="dropdown m-3">
                              <a class="btn bg-gradient-faded-success-vertical dropdown-toggle ubuntu-bold text-white" id="dropdownAdmin"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                              </a>
                              <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownAdmin">
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Index" asp-controller="Dashboard" asp-area="Admin">Dashboard</a></li>
                              </ul>
                            </div>
                            
                            <div class="dropdown-header text-white ubuntu-bold font-weight-bolder d-flex align-items-center px-0 mt-3">
                              <div class="d-inline-block">
                                <div class="icon icon-shape icon-xs border-radius-md bg-gradient-info text-center me-2 d-flex align-items-center justify-content-center ps-0">
                                  <i class="fa-regular fa-object-group fa-menu-style"></i>
                                </div>
                              </div>
                              Entities
                            </div>
                            <div class="dropdown m-3">
                              <a class="btn bg-gradient-faded-success-vertical dropdown-toggle ubuntu-bold text-white" id="dropdownUsers"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                Users
                              </a>
                              <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownUsers">
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Index" asp-controller="Identity" asp-area="Identity">User List</a></li>
                              </ul>
                            </div>
                            <hr class="vertical light">
                            <div class="dropdown m-3">
                              <a class="btn bg-gradient-faded-success-vertical dropdown-toggle ubuntu-bold text-white" id="dropdownProducts"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                Products
                              </a>
                              <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownProducts">
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Index" asp-controller="Product" asp-area="Admin">Product List</a></li>
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="AddProductPage" asp-controller="Product" asp-area="Admin">Add Product</a></li>
                              </ul>
                            </div>
                            <hr class="vertical light">
                            <div class="dropdown m-3">
                              <a class="btn bg-gradient-faded-success-vertical dropdown-toggle ubuntu-bold text-white" id="dropdownEvents"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                Events
                              </a>
                              <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownEvents">
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Index" asp-controller="Event" asp-area="Admin">Event List</a></li>
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Calendar" asp-controller="Event" asp-area="Admin">Calendar</a></li>
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="AddEventPage" asp-controller="Event" asp-area="Admin">Add Event</a></li>
                              </ul>
                            </div>
                          </div>
                          <div class="col-4 position-relative">
                            <div class="dropdown-header text-white ubuntu-bold font-weight-bolder d-flex align-items-center px-0 mt-3">
                              <div class="d-inline-block">
                                <div class="icon icon-shape icon-xs border-radius-md bg-gradient-info text-center me-2 d-flex align-items-center justify-content-center ps-0">
                                  <i class="fa-solid fa-money-bill-trend-up fa-menu-style"></i>
                                </div>
                              </div>
                              Investments
                            </div>
                            <div class="dropdown m-3">
                              <a class="btn bg-gradient-faded-success-vertical dropdown-toggle ubuntu-bold text-white" id="dropdownInvestors"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                Investors
                              </a>
                              <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownInvestors">
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Index" asp-controller="Identity" asp-area="Identity">User List</a></li>
                              </ul>
                            </div>
                            <hr class="vertical light">
                            <div class="dropdown m-3">
                              <a class="btn bg-gradient-faded-success-vertical dropdown-toggle ubuntu-bold text-white" id="dropdownCommunity"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                Community
                              </a>
                              <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownCommunity">
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Index" asp-controller="Product" asp-area="Admin">Product List</a></li>
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="AddProductPage" asp-controller="Product" asp-area="Admin">Add Product</a></li>
                              </ul>
                            </div>
                            <hr class="vertical light">
                            <div class="dropdown m-3">
                              <a class="btn bg-gradient-faded-success-vertical dropdown-toggle ubuntu-bold text-white" id="dropdownCompany"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                Company
                              </a>
                              <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownCompany">
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Index" asp-controller="Event" asp-area="Admin">Event List</a></li>
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Calendar" asp-controller="Event" asp-area="Admin">Calendar</a></li>
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="AddEventPage" asp-controller="Event" asp-area="Admin">Add Event</a></li>
                              </ul>
                            </div>
                            <hr class="vertical light">
                          </div>
                          <div class="col-4 position-relative">
                            <div class="dropdown-header text-white ubuntu-bold font-weight-bolder d-flex align-items-center px-0 mt-3">
                              <div class="d-inline-block">
                                <div class="icon icon-shape icon-xs border-radius-md bg-gradient-info text-center me-2 d-flex align-items-center justify-content-center ps-0">
                                  <i class="fa-solid fa-bag-shopping fa-menu-style"></i>
                                </div>
                              </div>
                              Customers
                            </div>
                            <div class="dropdown m-3">
                              <a class="btn bg-gradient-faded-success-vertical dropdown-toggle ubuntu-bold text-white" id="dropdownCustomers"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                Customers
                              </a>
                              <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownCustomers">
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Index" asp-controller="Identity" asp-area="Identity">User List</a></li>
                              </ul>
                            </div>
                            <hr class="vertical light">
                            <div class="dropdown m-3">
                              <a class="btn bg-gradient-faded-success-vertical dropdown-toggle ubuntu-bold text-white" id="dropdownOrders"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                Orders
                              </a>
                              <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownOrders">
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Index" asp-controller="Product" asp-area="Admin">Product List</a></li>
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="AddProductPage" asp-controller="Product" asp-area="Admin">Add Product</a></li>
                              </ul>
                            </div>
                            <hr class="vertical light">
                            <div class="dropdown m-3">
                              <a class="btn bg-gradient-faded-success-vertical dropdown-toggle ubuntu-bold text-white" id="dropdownReviews"
                                 data-bs-toggle="dropdown" aria-expanded="false">
                                Reviews
                              </a>
                              <ul class="dropdown-menu bg-gradient-dark" aria-labelledby="dropdownReviews">
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Index" asp-controller="Event" asp-area="Admin">Event List</a></li>
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="Calendar" asp-controller="Event" asp-area="Admin">Calendar</a></li>
                                <li><a class="dropdown-item ubuntu-bold text-white" asp-action="AddEventPage" asp-controller="Event" asp-area="Admin">Add Event</a></li>
                              </ul>
                            </div>
                            <hr class="vertical light">
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>    
                        }
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>
<div class="container-fluid mb-5">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer pt-5 mt-11">
    <hr class="horizontal dark mb-5">
    <div class="container">
        <div class=" row">
            <div class="col-md-12 mb-4 ms-auto">
                <div>
                    <h6 class="text-gradient text-primary ubuntu-bold">Financial Dashboard</h6>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="text-center">
                    <p class="my-4 text-sm text-gradient text-info ubuntu-bold">
                        All rights reserved. Copyright © <script>
                            document.write(new Date().getFullYear())
                        </script> Created by Kevin Stradtman
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/assets/js/core/popper.min.js" type="text/javascript"></script>
<script src="~/assets/js/core/bootstrap.min.js" type="text/javascript"></script>

<script src="~/assets/js/plugins/perfect-scrollbar.min.js" type="text/javascript"></script>
<script src="~/assets/js/plugins/typedjs.js"></script>
<script src="~/assets/js/plugins/moment.min.js"></script>
<script src="~/assets/js/plugins/nouislider.min.js"></script>
<script src="~/assets/js/plugins/glidejs.min.js"></script>
<script src="~/assets/js/plugins/choices.min.js" type="text/javascript"></script>
<script src="~/assets/js/plugins/chartjs.min.js"></script>
<script src="~/assets/js/plugins/flatpickr.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.0.1/vue.min.js" type="text/javascript"></script>
<script src="~/js/card-vue.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.3.5/js/swiper.min.js" type="text/javascript"></script>
<script src="~/js/fullcalendar/fullcalendar/dist/index.global.min.js"></script>
<script src="~/assets/js/soft-design-system-pro.min.js" type="text/javascript"></script>

<script src="~/js/site.js"></script>
@await Component.InvokeAsync("Notyf")
@RenderSection("Scripts", required: false)
</body>
</html>