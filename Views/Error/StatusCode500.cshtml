@{
    Layout = "_Layout";
}

<section class="my-10">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 my-auto">
                <h1 class="display-1 text-bolder text-gradient text-danger">Error 500</h1>
                <h2>Erm. Internal Server Error</h2>
                <p class="lead">We suggest you to go to the homepage while we solve this issue.</p>
                @if (ViewBag.user != null)
                {
                    <a class="btn bg-gradient-dark" asp-action="Index" asp-controller="Dashboard" asp-area="Admin">Back To Dashboard</a>
                }
                else
                {
                    <a class="btn bg-gradient-dark" asp-action="Login" asp-controller="Identity" asp-area="Identity">Back To Login</a>
                }
            </div>
            <div class="col-lg-6 my-auto position-relative">
                <img class="w-100 position-relative" src="~/assets/img/illustrations/error-500.png" alt="404-error">
            </div>
        </div>
    </div>
</section>